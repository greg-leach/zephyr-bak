/dts-v1/;
#include <zephyr/dt-bindings/led/led.h>
#include <nordic/nrf52833_qiaa.dtsi>
#include "sera_nx040_dvk-pinctrl.dtsi"

/ {
	model = "Sera NX040";
	compatible = "ezurio,sera_nx040_dvk";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,ieee802154 = &ieee802154;
		nordic,pm-ext-flash = &at25;
	};

	fstab {
		compatible = "zephyr,fstab";
		lfs1: lfs1 {
			compatible = "zephyr,fstab,littlefs";
			mount-point = "/lfs1";
			partition = <&littlefs_storage>;
			automount;
			read-size = <16>;
			prog-size = <16>;
			cache-size = <64>;
			lookahead-size = <32>;
			block-cycles = <512>;
		};
	};

	buttons {
		compatible = "gpio-keys";
		button1: button_1 {
			gpios = <&gpio1 3 0>;
			label = "Push button switch (SW4)";
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led-strip = &led_strip;
		mcuboot-button0 = &button1;
		watchdog0 = &wdt0;
	};

	mikrobus_header: mikrobus-connector {
		compatible = "mikro-bus";
		#gpio-cells = <2>;
		gpio-map-mask = <0xffffffff 0xffffffc0>;
		gpio-map-pass-thru = <0 0x3f>;
		/* Names in parenthesis are on the silkscreen next to their respective jumpers. */
		/* They are alternate signal configurations. */
		gpio-map =
		<0 0 &gpio0 3 0>,    /* AN  (GPIO 1) */
		<1 0 &gpio0 31 0>,   /* RST (GPIO 8) */
		<2 0 &gpio0 20 0>,   /* CS   */
		<3 0 &gpio1 9 0>,    /* SCK  */
		<4 0 &gpio0 21 0>,   /* MISO */
		<5 0 &gpio1 8 0>,    /* MOSI */
		/* 3.3V */
		/* GND  */
		<6 0 &gpio0 30 0>,   /* PWM (GPIO 3) */
		<7 0 &gpio0 29 0>,   /* INT (GPIO 2) */
		<8 0 &gpio0 11 0>,   /* UART RX */
		<9 0 &gpio0 16 0>,   /* UART TX */
		<10 0 &gpio0 26 0>,  /* SCL  */
		<11 0 &gpio0 27 0>;  /* SDA  */
		/* 5V   */
		/* GND  */
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	current-speed = <115200>;
	status = "okay";
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};

&uart1 {
	compatible = "nordic,nrf-uarte";
	current-speed = <115200>;
	status = "okay";
	pinctrl-0 = <&uart1_default>;
	pinctrl-1 = <&uart1_sleep>;
	pinctrl-names = "default", "sleep";
};

&i2c0 {
	compatible = "nordic,nrf-twi";
	status = "okay";
	pinctrl-0 = <&i2c0_default>;
	pinctrl-1 = <&i2c0_sleep>;
	pinctrl-names = "default", "sleep";
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&pwm0_default>;
	pinctrl-1 = <&pwm0_sleep>;
	pinctrl-names = "default", "sleep";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0xB000>;
		};
	};
};

zephyr_udc0: &usbd {
	compatible = "nordic,nrf-usbd";
	status = "okay";
};

&ieee802154 {
	status = "okay";
};

/* SPI bus to UWB radio */
&spi1 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	cs-gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
	pinctrl-0 = <&spi1_default>;
	pinctrl-1 = <&spi1_sleep>;
	pinctrl-names = "default", "sleep";
	uwb_radio: sr040@0 {
		compatible = "nxp,sr040";
		reg = <0>;
		spi-max-frequency = <8000000>;
		int-gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
		ready-gpios = <&gpio0 12 GPIO_ACTIVE_LOW>;
		reset-gpios = <&gpio1 7 GPIO_ACTIVE_LOW>;
	};
};


/* SPI bus to module SPI flash and external SPI pins */
&spi2 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	cs-gpios = <&gpio0 25 GPIO_ACTIVE_LOW>, <&gpio0 20 GPIO_ACTIVE_LOW>;
	pinctrl-0 = <&spi2_default>;
	pinctrl-1 = <&spi2_sleep>;
	pinctrl-names = "default", "sleep";
	at25: at25ff081@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <80000000>;
		size = <8388608>;
		has-dpd;
		t-enter-dpd = <10000>;
		t-exit-dpd = <35000>;
	};
};

&spi3 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	pinctrl-0 = <&spi3_default>;
	pinctrl-1 = <&spi3_sleep>;
	pinctrl-names = "default", "sleep";
	led_strip: ws2812@0 {
		compatible = "worldsemi,ws2812-spi";
		status = "okay";

		/* SPI */
		reg = <0>; /* ignored, but necessary for SPI bindings */
		spi-max-frequency = <4000000>;

		/* WS2812 */
		chain-length = <16>;
		color-mapping = <LED_COLOR_ID_RED
			LED_COLOR_ID_GREEN
			LED_COLOR_ID_BLUE>;
		spi-one-frame = <0xf8>;
		spi-zero-frame = <0xc0>;
	};
};

&at25 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		littlefs_storage: partition@90000 {
			label = "littlefs_storage";
			reg = <0x00090000 0x00070000>;
		};
	};
};

&uicr {
	gpio-as-nreset;
};

&reg1 {
	regulator-initial-mode = <NRF5X_REG_MODE_DCDC>;
};
